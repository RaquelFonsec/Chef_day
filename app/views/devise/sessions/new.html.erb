<div class="container-forms d-flex justify-content-center mt-5">
  <div class="row">
    <h3>Insert your credentials to login!</strong></h3>
  </div>
</div>

<div class="container-forms d-flex justify-content-center mt-4">
  <div class="row">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Do you want to be remembered?", as: :boolean if devise_mapping.rememberable? %>
  </div>
    <div class="form-actions btn btn-success d-flex justify-content-center mt-4">
      <%= f.button :submit, "Submit!" %>
    </div>
  <% end %>
</div>
