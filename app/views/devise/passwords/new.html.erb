<div class="container-forms d-flex justify-content-center mt-5">
  <div class="row">
    <h3>Have you forgot your password?! Let's try to recover it!</strong></h3>
  </div>
</div>
<div class="container-forms d-flex justify-content-center mt-4">
  <div class="row">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: "Write down the email you are currently using in your account:",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions btn btn-success d-flex justify-content-center mt-4">
      <%= f.button :submit, "Send me reset password instructions" %>
    </div>
    <br>
  <% end %>
  <%#= render "devise/shared/links" %>
  </div>
</div>

